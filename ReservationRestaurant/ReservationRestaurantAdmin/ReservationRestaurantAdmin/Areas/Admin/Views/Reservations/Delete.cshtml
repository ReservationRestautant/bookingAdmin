@model ReservationRestaurantAdmin.Models2.Reservations

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    string myString = ""; // Chuỗi rỗng

}

<h3>Are you sure you want to delete this?</h3>
<div class="card-body">
    <div class="table-responsive">
        <table class="product-info-table m-t-20">
            <tbody>
                <tr>
                    <td>ID</td>
                    <td class="text-dark font-weight-semibold">@Model.id</td>
                </tr>
                <tr>
                    <td>Phone</td>
                    <td class="text-dark font-weight-semibold">@Model.userSysterm.phone </td>
                </tr>
                <tr>
                    <td>Name</td>
                    <td class="text-dark font-weight-semibold">@Model.userSysterm.name</td>
                </tr>
                <tr>
                    <td>Date</td>
                    <td class="text-dark font-weight-semibold">@Model.date</td>
                </tr>
                <tr>
                    <td>Start Time</td>
                    <td class="text-dark font-weight-semibold">@Model.startTime</td>
                </tr>
                <tr>
                    <td>End Time</td>
                    <td class="text-dark font-weight-semibold">@Model.endTime</td>
                </tr>
                <tr>
                    <td>Number Guest</td>
                    <td class="text-dark font-weight-semibold">@Model.number_guest</td>
                </tr>
                <tr>
                    <td>Description</td>
                    <td class="text-dark font-weight-semibold">@Model.description</td>
                </tr>
                <tr>
                    <td>Price</td>
                    <td class="text-dark font-weight-semibold">@Model.price</td>
                </tr>
                <tr>
                    <td>Discount</td>
                    <td class="text-dark font-weight-semibold">@Model.discount</td>
                </tr>
             
                    
                    @if (string.IsNullOrEmpty(Model.phone_guest))
                    {
                    <tr>
                    <td>PhoneGuest</td>
                       <td class="text-dark font-weight-semibold">@Model.userSysterm.phone</td>
                    </tr>
                    }
                    else
                    {
                    <tr>
                         <td>PhoneGuest</td>
                         <td class="text-dark font-weight-semibold">@Model.phone_guest</td>
                    </tr>
                    }
                @if (string.IsNullOrEmpty(Model.feedback))
                {

                    <tr>
                        <td>Feedback</td>
                        <td class="text-dark font-weight-semibold"> Chưa có feedback </td>
                    </tr>
                }
                else
                {
                    <tr>
                        <td>Feedback</td>
                        <td class="text-dark font-weight-semibold">@Model.feedback </td>
                    </tr>
                }
                 
               
             
                    @if (Model.status.Equals(true))
                    {
                          <tr>
                              <td>Status</td>
                        <td style="color:green" class="text-dark font-weight-semibold">Approved</td>

                    </tr>
                    }
                    else
                    {
                         <tr>
                        <td>Status</td>
                        <td style="color:red" class="text-dark font-weight-semibold">Pending</td>
                       </tr>
                    }
               

            </tbody>
        </table>

    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
